# 游빍 ICT ENGINE v6.0 ENTERPRISE - DEVELOPMENT CONFIGURATION
# ========================================================
# Configuraci칩n espec칤fica para entorno de desarrollo

# 游늵 TRADING CONFIGURATION (Development overrides)
trading:
  # Configuraci칩n m치s permisiva para desarrollo
  max_positions: 10
  max_daily_trades: 100
  risk_per_trade: 0.01  # 1% por operaci칩n (seguro para testing)
  
  # Order blocks - configuraci칩n para testing
  order_blocks:
    min_size_pips: 5   # M치s permisivo para ver m치s datos
    max_age_hours: 48  # M치s tiempo para an치lisis
    detection_timeframes: ["M1", "M5", "M15", "M30", "H1", "H4"]  # Todos los timeframes

# 游댋 MT5 CONNECTION (Development)
mt5:
  connection:
    timeout: 120000  # 2 minutes (m치s tiempo para debug)
    retries: 2       # Menos reintentos
    retry_delay: 10  # M치s tiempo para debug
  
  # Demo server por defecto
  # Puede ser sobrescrito con variables de entorno

# 游꿢 RISK MANAGEMENT (Development)
risk:
  # L칤mites m치s permisivos para desarrollo
  emergency_drawdown_limit: 0.20  # 20% (permisivo para testing)
  max_consecutive_losses: 10      # M치s p칠rdidas para an치lisis
  daily_loss_limit: 0.10         # 10% (permisivo)
  
  position_sizing:
    method: "fixed_risk"
    max_position_size: 0.1  # Posiciones peque침as para testing

# 游늳 DASHBOARD CONFIGURATION (Development)
dashboard:
  refresh_interval: 2000  # 2 seconds (m치s r치pido para desarrollo)
  
  charts:
    max_candles: 2000      # M치s datos para an치lisis
    update_interval: 500   # 500ms (muy r치pido)

# 游닇 LOGGING CONFIGURATION (Development)
logging:
  level: "DEBUG"  # M치ximo detalle para desarrollo
  
  rotation:
    max_size_mb: 200    # Archivos m치s grandes para desarrollo
    backup_count: 3     # Menos backups
  
  # Todos los logs habilitados para desarrollo
  categories:
    trading: true
    mt5: true
    dashboard: true
    order_blocks: true
    patterns: true
    risk: true
    system: true

# 游댢 SYSTEM CONFIGURATION (Development)
system:
  performance:
    cache_ttl_seconds: 60   # 1 minute (menos cache para ver cambios)
    max_memory_usage_mb: 2048  # M치s memoria para desarrollo
    cleanup_interval_minutes: 30  # Menos frecuente
  
  health:
    check_interval_seconds: 60  # Menos frecuente
    alert_thresholds:
      cpu_percent: 95       # Muy permisivo
      memory_percent: 95    # Muy permisivo
      disk_percent: 95      # Muy permisivo
  
  persistence:
    backup_interval_hours: 12  # Menos frecuente
    retention_days: 7         # Menos retenci칩n

# 游뚿 ALERTS CONFIGURATION (Development)
alerts:
  channels:
    console: true       # Habilitado para desarrollo
    file: true
    dashboard: true
    email: false        # Deshabilitado para desarrollo
  
  # Todos los tipos habilitados para ver todo
  types:
    order_block_detected: true
    pattern_confirmed: true
    risk_threshold_exceeded: true
    system_error: true
    mt5_connection_lost: true

# 游빍 DEVELOPMENT SPECIFIC
development:
  # Configuraciones espec칤ficas de desarrollo
  debug_mode: true
  verbose_output: true
  
  # Testing features
  simulate_market_data: false
  mock_mt5_connection: false
  
  # Performance profiling
  enable_profiling: true
  profile_slow_queries: true
  
  # Hot reload
  hot_reload: true
  watch_file_changes: true

# 游댢 TESTING CONFIGURATION
testing:
  # Configuraci칩n para tests
  test_data_path: "tests/data/"
  mock_responses: true
  
  # Test timeouts
  default_timeout: 30
  slow_test_timeout: 120
  
  # Coverage
  minimum_coverage: 80